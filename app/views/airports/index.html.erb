<!--      <th>Keywords</th>-->
    </tr>
  </thead>

  <tbody>
    <% @airports.each do |airport| %>
      <tr>

        <% if airport.has_home_link? %>
          <td><a href="<%= airport.home_link %>"><%= airport.name %></a></td>
        <% else %>
          <td><%= airport.name %></td>
        <% end %>

        <% if airport.lat_long_valid? %>
          <td><a href="<%= airport.map_url %>">Map</a></td>
        <% else %>
          <td />
        <% end %>

        <td><%= airport.lat.round(6) %></td>
        <td><%= airport.long.round(6) %></td>
        <td><%= airport.elevation_ft %></td>
        <td><%= airport.iso_country %></td>

        <% if airport.wikipedia_link %>
          <td><a href="<%= airport.wikipedia_link %>">Wikipedia</a></td>
        <% else %>
          <td></td>
        <% end %>

        <td><%= link_to 'Details', airport %></td>

        <!--        <td><%#= airport.oa_id %></td>-->
