<div class="container">
<h1>Airports</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
<!--      <th>Oa</th>-->
<!--      <th>Ident</th>-->
<!--      <th>Type</th>-->
      <th>Name</th>
      <th>Map</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Elevation (ft)</th>
<!--      <th>Continent</th>-->
      <th>Country</th>
      <th>Wikipedia</th>
      <th>Details</th>
